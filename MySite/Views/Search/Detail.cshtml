@model MySite.Models.Listing
<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Shop Name</p>
            <div class="list-group">
                <a href="#" class="list-group-item active">Category 1</a>
                <a href="#" class="list-group-item">Category 2</a>
                <a href="#" class="list-group-item">Category 3</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">

                @foreach (var item1 in Model.ListingImageGalleries.Where(x => x.ListingID == Convert.ToInt32(Model.Id)))
                {
                    <a class="grouped_elements" rel="group1" href="\Content\Images\@item1.ImagePath">

                        <img class="img-responsive" src="\Content\Images\@item1.ImagePath" alt="@item1.ImageAltText">
                    </a>
                }
                <div class="caption-full">
                    <h4 class="pull-right">@Html.DisplayFor(modelItem => Model.Price) </h4> @Html.DisplayFor(modelItem => Model.PriceType)
                    <h4>
                        <a href="#">@Html.DisplayFor(modelItem => Model.Address), @Html.DisplayFor(modelItem => Model.City)</a>
                    </h4>
                    <p>@Html.DisplayFor(modelItem => Model.Description)</p>

                </div>

            </div>


        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

       

        /* Apply fancybox to multiple items */

        $("grouped_elements.group").fancybox({
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'speedIn': 600,
            'speedOut': 200,
            'overlayShow': false
        });

    });
</script>
